<%= form_for @micropost do |f| %>
<div class = "field">
	<%= f.label :title %>
	<%= f.text_field :title%>
</div>

<div class  ="field">
	<%= f.label :content%>
	<%= f.text_area :content%>
</div> 

<div class = "field">
	<%= f.label :references%>
	<%= f.text_area :references%>
</div> 

<div class = "actions">
	<%= f.submit "Submit"%>
</div> 
<% end %>
